<UserControl x:Class="WPF_Kiosk.Control.ChattingCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Kiosk.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock Text="{Binding message}" Background="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Background="AntiqueWhite">
                <TextBox Height="60"/>
                <Button Height="40" Width="150"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="white">
            
        </Grid>
    </Grid>
</UserControl>
